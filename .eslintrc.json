{
    "extends": "airbnb-base",
    "plugins": [
        "mocha"
    ],
    "env": {
        "mocha": true
    },
    "rules": {
        "arrow-parens": "off",
        "linebreak-style": "off",
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": [
                    "server/tests/**"
                ]
            }
        ]
    }
}